{%- case section.settings.css_animations -%}
    {% when '1' %}
      	{%- assign css_animations_class = '' -%}
    {% when '2' %}
    	{%- assign css_animations_class = 'wow fadeIn' -%}
    {% when '3' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '4' %}
    	{%- assign css_animations_class = 'wow fadeInDownBig' -%}
    {% when '5' %}
    	{%- assign css_animations_class = 'wow fadeInLeft' -%}
    {% when '6' %}
    	{%- assign css_animations_class = 'wow fadeInLeftBig' -%}
    {% when '7' %}
    	{%- assign css_animations_class = 'wow fadeInRight' -%}
    {% when '8' %}
    	{%- assign css_animations_class = 'wow fadeInRightBig' -%}
    {% when '9' %}
    	{%- assign css_animations_class = 'wow fadeInUp' -%}
    {% when '10' %}
    	{%- assign css_animations_class = 'wow fadeInUpBig' -%}
{%- endcase -%}

{%- case section.settings.use_width -%}
    {% when '1' %}
      	{%- assign width_testimonial = 'g-fullwwidth' -%}
    {% when '2' %}
    	{%- assign width_testimonial = 'container-full' -%}
    {% when '3' %}
    	{%- assign width_testimonial = 'container' -%}
{%- endcase -%}

<div class="g-testimonials-brands {{ css_animations_class }}" {% if section.settings.margin != blank %}style="margin: {{ section.settings.margin }};"{% endif %}>
  <div class="{{ width_testimonial }}">
    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-12">
        <div style="display: none;">{% include 'dlicon-arrow-left2' %}{% include 'dlicon-arrow-right2' %}</div>
        <div class="g-stick-testimonial g-slick-slider" data-slick='{"infinite":{% if section.settings.use_loop %}true{% else %}false{% endif %},"dots":{% if section.settings.use_dots %}true{% else %}false{% endif %},"slidesToShow":1,"slidesToScroll":1,"autoplay":{% if section.settings.use_autoplay %}true{% else %}false{% endif %},"arrows":false,"speed":"1000","autoplaySpeed":3000,"centerMode":false,"variableWidth":false,"vertical":false,"nextArrow":"<button type=\"button\" style=\"font-size:24px;width:24px;height:24px;line-height:24px;\" class=\"slick-next default\"><svg><use xlink:href=\"#dlicon-arrow-right2\"><\/use><\/svg><\/button>","prevArrow":"<button type=\"button\" style=\"font-size:24px;width:24px;height:24px;line-height:24px;\" class=\"slick-prev default\"><svg><use xlink:href=\"#dlicon-arrow-left2\"><\/use><\/svg><\/button>","responsive":[{"breakpoint":1824,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":1200,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":992,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":768,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":480,"settings":{"slidesToShow":1,"slidesToScroll":1}}]}'>
          {% for block in section.blocks %}
          {% if block.type == 'testimonials' %}
          <div class="testimonial_item">
            <div class="testimonial_item--image">
              {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: '50x50' }}" alt="{{ block.settings.image.alt }}" />
              {% endif %}
            </div>
            {% if block.settings.quote != blank %}
            <div class="testimonial_item--info" {% if block.settings.color != blank %}style="color: {{ block.settings.color }};"{% endif %}>
              <p>{{ block.settings.quote }}</p>
              {% if block.settings.author != blank %}
              <div class="name-black" {% if block.settings.color != blank %}style="color: {{ block.settings.color }};"{% endif %}>
                {{ block.settings.author }}
              </div>
              {% endif %}
            </div>
            {% endif %}
          </div>
          {% endif %}
          {% endfor %}
        </div>      	
      </div>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="g-slick-slider grid-items xlg-grid-5-items lg-grid-5-items md-grid-4-items sm-grid-3-items xs-grid-2-items mb-grid-1-items" data-slick='{"infinite":{% if section.settings.use_loop %}true{% else %}false{% endif %},"dots":{% if section.settings.use_dots %}true{% else %}false{% endif %},"slidesToShow":5,"slidesToScroll":5,"autoplay":{% if section.settings.use_autoplay %}true{% else %}false{% endif %},"arrows":false,"speed":"1000","autoplaySpeed":3000,"centerMode":false,"variableWidth":false,"nextArrow":"<button type=\"button\" style=\"font-size:24px;width:24px;height:24px;line-height:24px;\" class=\"slick-next default\"><svg><use xlink:href=\"#dlicon-arrow-right2\"><\/use><\/svg><\/button>","prevArrow":"<button type=\"button\" style=\"font-size:24px;width:24px;height:24px;line-height:24px;\" class=\"slick-prev default\"><svg><use xlink:href=\"#dlicon-arrow-left2\"><\/use><\/svg><\/button>","responsive":[{"breakpoint":1824,"settings":{"slidesToShow":5,"slidesToScroll":5}},{"breakpoint":1200,"settings":{"slidesToShow":4,"slidesToScroll":4}},{"breakpoint":992,"settings":{"slidesToShow":3,"slidesToScroll":3}},{"breakpoint":768,"settings":{"slidesToShow":3,"slidesToScroll":3}},{"breakpoint":480,"settings":{"slidesToShow":2,"slidesToScroll":2}}]}'>
          {% for block in section.blocks %}
          {% if block.type == 'brands' %}
          <div class="grid-item brand-item">
            <div class="image-brand">
              {% if block.settings.image != blank %}
              {% if block.settings.link != blank %}<a href="{{ block.settings.link }}" target="_blank">{% endif %}
              <img data-src="{{ block.settings.image | img_url: 'master' | split:'?' | first }}" class="vc_single_image-img attachment-full lazy" alt="{{ block.settings.image.alt }}" />
              {% if block.settings.link != blank %}</a>{% endif %}
              {% else %}
              {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
          </div>
          {% endif %}
          {% endfor %}
        </div>  
      </div>
    </div>

  </div>    
</div>

