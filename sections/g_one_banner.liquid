{%- case section.settings.css_animations -%}
    {% when '1' %}
      	{%- assign css_animations_class = '' -%}
    {% when '2' %}
    	{%- assign css_animations_class = 'wow fadeIn' -%}
    {% when '3' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '4' %}
    	{%- assign css_animations_class = 'wow fadeInDownBig' -%}
    {% when '5' %}
    	{%- assign css_animations_class = 'wow fadeInLeft' -%}
    {% when '6' %}
    	{%- assign css_animations_class = 'wow fadeInLeftBig' -%}
    {% when '7' %}
    	{%- assign css_animations_class = 'wow fadeInRight' -%}
    {% when '8' %}
    	{%- assign css_animations_class = 'wow fadeInRightBig' -%}
    {% when '9' %}
    	{%- assign css_animations_class = 'wow fadeInUp' -%}
    {% when '10' %}
    	{%- assign css_animations_class = 'wow fadeInUpBig' -%}
{%- endcase -%}

{%- case section.settings.use_width -%}
    {% when '1' %}
      	{%- assign width_one_banner = 'g-fullwwidth' -%}
    {% when '2' %}
    	{%- assign width_one_banner = 'container-full' -%}
    {% when '3' %}
    	{%- assign width_one_banner = 'container' -%}
{%- endcase -%}

<div class="g-one-banner {{ css_animations_class }}" {% if section.settings.margin != blank %}style="margin: {{ section.settings.margin }};"{% endif %}>
  <div class="{{ width_one_banner }}">
    <div class="g-banner cover-background lazy" {% if section.settings.image != blank %}data-src="{{ section.settings.image | img_url: '1920x', format: 'pjpg' | split:'?' | first }}"{% else %}style="background-color: #e6e6e6;"{% endif %}>
      <div class="container">
        <div class="row">
          <div class="col-sm-6 col-xs-12"></div>
          <div class="col-sm-6 col-xs-12">
            {% if section.settings.title != blank %}
            <div class="title-block-letter" {% if section.settings.title_color != blank %}style="color: {{ section.settings.title_color }};"{% endif %}>{{ section.settings.title }}</div>
            {% endif %}   
            {% if section.settings.heading != blank %}
            <h2 {% if section.settings.heading_color != blank %}style="color: {{ section.settings.heading_color }};"{% endif %}>{{ section.settings.heading }}</h2>
            {% endif %}
            {% if section.settings.subheading != blank %}
            <p class="subheading" {% if section.settings.subheading_color != blank %}style="color: {{ section.settings.subheading_color }};"{% endif %}>{{ section.settings.subheading }}</p>
            {% endif %}
            {% if section.settings.button_name != blank %}
            <a href="{{ section.settings.button_link }}" class="btn-border" {% if section.settings.button_name_color != blank %}style="color: {{ section.settings.button_name_color }};"{% endif %}>{{ section.settings.button_name }}</a>  
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "One Banner",
    "class": "globo_one_banner",
    "presets": [
      {
        "name": "One Banner",
        "category": "Categories & Banner"
      }
    ],
    "settings": [
        {
        "type": "select",
        "id": "css_animations",
        "label": "CSS Animation",
        "options": [
            { "value": "1", "label": "None" },
            { "value": "2", "label": "fadeIn" },
            { "value": "3", "label": "fadeInDown" },
            { "value": "4", "label": "fadeInDownBig" },
            { "value": "5", "label": "fadeInLeft" },
            { "value": "6", "label": "fadeInLeftBig" },
            { "value": "7", "label": "fadeInRight" },
            { "value": "8", "label": "fadeInRightBig" },
            { "value": "9", "label": "fadeInUp" },
            { "value": "10", "label": "fadeInUpBig" }
          ],
          "default": "2"
        },
        {
          "type": "select",
          "id": "use_width",
          "label": "One banner width",
          "options": [
            { "value": "1", "label": "Use full width" },
            { "value": "2", "label": "Use padding" },
            { "value": "3", "label": "Use container" }
          ],
          "default": "2"
        },
        {
          "type": "text",
          "id": "margin",
          "label": "Margin: (top-right-bottom-left)",
          "info": "Ex: 10px 0 30px 0"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default": "NESOS TRENDS 2018"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Title color"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
		  "default": "<span>SALE<br>UPTO<\/span><span>40%<\/span>"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading color"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "subheading",
		  "default": "WHITE DRESS"
        },
        {
          "type": "color",
          "id": "subheading_color",
          "label": "Subheading color"
        },
        {
          "type": "text",
          "id": "button_name",
          "label": "Button Name",
		  "default": "Shop Now"
        },
        {
          "type": "color",
          "id": "button_name_color",
          "label": "Button name color"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
    ]
  }
{% endschema %}

