{%- case section.settings.css_animations -%}
    {% when '1' %}
      	{%- assign css_animations_class = '' -%}
    {% when '2' %}
    	{%- assign css_animations_class = 'wow fadeIn' -%}
    {% when '3' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '4' %}
    	{%- assign css_animations_class = 'wow fadeInDownBig' -%}
    {% when '5' %}
    	{%- assign css_animations_class = 'wow fadeInLeft' -%}
    {% when '6' %}
    	{%- assign css_animations_class = 'wow fadeInLeftBig' -%}
    {% when '7' %}
    	{%- assign css_animations_class = 'wow fadeInRight' -%}
    {% when '8' %}
    	{%- assign css_animations_class = 'wow fadeInRightBig' -%}
    {% when '9' %}
    	{%- assign css_animations_class = 'wow fadeInUp' -%}
    {% when '10' %}
    	{%- assign css_animations_class = 'wow fadeInUpBig' -%}
{%- endcase -%}

<div class="g-left-banner-newsletter {{ css_animations_class }}" {% if section.settings.margin != blank %}style="margin: {{ section.settings.margin }};"{% endif %}>
  <div class="container-full">
    <div class="equalize">
      <div class="col-sm-6 col-xs-12 no-padding cover-background" {% if section.settings.image_left != blank %}style="background-image: url({{ section.settings.image_left | img_url: 'master' | split:'?' | first }})"{% endif %}>
        <div class="display-table">
          <div class="display-table-cell">
            <div class="box-banner-1 box-banner-4">
              {% if section.settings.heading != blank %}
              <h2 {% if section.settings.heading_color != blank %}style="color: {{ section.settings.heading_color }};"{% endif %}>{{ section.settings.heading }}</h2>
              {% endif %}
              {% if section.settings.title != blank %}
              <div class="title" {% if section.settings.title_color != blank %}style="color: {{ section.settings.title_color }};"{% endif %}>{{ section.settings.title }}</div>
              {% endif %} 
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-6 col-xs-12 no-padding" {% if section.settings.bg_color_right != blank %}style="background-color: {{ section.settings.bg_color_right }};"{% endif %}>
        <div class="display-table">
          <div class="globo-mailchimp-container padding-fifteen-all display-table-cell">
            {% if section.settings.heading_newsletter != blank %}
            <h2 {% if section.settings.heading_newsletter_color != blank %}style="color: {{ section.settings.heading_newsletter_color }};"{% endif %}>{{ section.settings.heading_newsletter }}</h2>
            {% endif %}
            {% if section.settings.text_form != blank %}
            <div class="newsletter-bg-text-form" {% if section.settings.text_form_color != blank %}style="color: {{ section.settings.text_form_color }};"{% endif %}>{{ section.settings.text_form }}</div>
            {% endif %}
            {% form 'customer',  class:'globo-easy-mc-form' %}
            {{ form.errors | default_errors }}
            {% if form.posted_successfully? %}
            <p class="form--success">{{ 'general.newsletter_form.confirmation' | t }}</p>
            {% else %}
            <div class="input-group password__input-group">
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input type="email"
                     name="contact[email]"
                     id="Email-right"
                     class="globo-easy-mc-email field-no-label"
                     value="{% if customer %}{{ customer.email }}{% endif %}"
                     placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"
                     autocorrect="off"
                     autocapitalize="off">
              <span class="input-group__btn">
                <button type="submit" class="globo-easy-mc-submit-button btn btn-primary" name="commit" id="Subscribe-right">
                  <span>{{ 'general.newsletter_form.submit' | t }}</span>
                </button>
              </span>
            </div>
            {% endif %}
            {% endform %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Left banner & Newsletter",
    "class": "globo_left_banner_right_newsletter",
    "settings": [
      {
        "type": "select",
        "id": "css_animations",
        "label": "CSS Animation",
        "options": [
          { "value": "1", "label": "None" },
          { "value": "2", "label": "fadeIn" },
          { "value": "3", "label": "fadeInDown" },
          { "value": "4", "label": "fadeInDownBig" },
          { "value": "5", "label": "fadeInLeft" },
          { "value": "6", "label": "fadeInLeftBig" },
          { "value": "7", "label": "fadeInRight" },
          { "value": "8", "label": "fadeInRightBig" },
          { "value": "9", "label": "fadeInUp" },
          { "value": "10", "label": "fadeInUpBig" }
        ],
        "default": "2"
      },
      {
        "type": "text",
        "id": "margin",
        "label": "Margin: (top-right-bottom-left)",
        "info": "Ex: 10px 0 30px 0"
      },
      {
        "type": "header",
        "content": "Left content"
      },
      {
        "type": "image_picker",
        "id": "image_left",
        "label": "Background image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "<span>SALE UPTO<\/span><strong>20%<\/strong>"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading color",
        "default": "#f26c4f"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "SMART<br>SPEAKER"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title color",
        "default": "#000000"
      },
      {
        "type": "header",
        "content": "Right content"
      },
      {
        "type": "color",
        "id": "bg_color_right",
        "label": "Background color",
        "default": "#f7941d"
      },
      {
        "type": "text",
        "id": "heading_newsletter",
        "label": "Heading",
        "default": "Get Discount 30% Off"
      },
      {
        "type": "color",
        "id": "heading_newsletter_color",
        "label": "Heading color"
      },
      {
        "type": "textarea",
        "id": "text_form",
        "label": "Text",
        "default": "Get 20% discount with notified about the latest news and updates. No spam, we promise!"
      },
      {
        "type": "color",
        "id": "text_form_color",
        "label": "Text color"
      },
      {
        "type": "paragraph",
        "content": "Any customers who sign up will have an account created for them in Shopify. [View customers](/admin/customers?query=&accepts_marketing=1)"
      }
    ],
    "presets": [{
      "name": "Left banner & Newsletter",
      "category": "Promotional"
    }]
  }
{% endschema %}
