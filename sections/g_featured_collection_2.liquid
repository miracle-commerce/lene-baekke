{%- case section.settings.css_animations -%}
    {% when '1' %}
      	{%- assign css_animations_class = '' -%}
    {% when '2' %}
    	{%- assign css_animations_class = 'wow fadeIn' -%}
    {% when '3' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '4' %}
    	{%- assign css_animations_class = 'wow fadeInDownBig' -%}
    {% when '5' %}
    	{%- assign css_animations_class = 'wow fadeInLeft' -%}
    {% when '6' %}
    	{%- assign css_animations_class = 'wow fadeInLeftBig' -%}
    {% when '7' %}
    	{%- assign css_animations_class = 'wow fadeInRight' -%}
    {% when '8' %}
    	{%- assign css_animations_class = 'wow fadeInRightBig' -%}
    {% when '9' %}
    	{%- assign css_animations_class = 'wow fadeInUp' -%}
    {% when '10' %}
    	{%- assign css_animations_class = 'wow fadeInUpBig' -%}
{%- endcase -%}

{%- case section.settings.use_width -%}
    {% when '1' %}
      	{%- assign width_collection = 'g-fullwwidth' -%}
    {% when '2' %}
    	{%- assign width_collection = 'container-full' -%}
    {% when '3' %}
    	{%- assign width_collection = 'container' -%}
{%- endcase -%}
<div class="g-featured-collection-2 cover-background lazy {{ css_animations_class }}" {% if section.settings.image != blank %}data-src="{{ section.settings.image | img_url: '1920x', format: 'pjpg' | split:'?' | first }}"{% endif %} style="{% if section.settings.bg_color != blank %}background-color: {{ section.settings.bg_color }};{% endif %}{% if section.settings.margin != blank %}margin: {{ section.settings.margin }};{% endif %}{% if section.settings.padding != blank %}padding: {{ section.settings.padding }};{% endif %}">
  <div class="{{ width_collection }}">
    {% if section.settings.title != blank %}
    <h2 class="text-center">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="g-stick-featured-collection-2 g-slick-slider" data-slick='{"infinite":{% if section.settings.use_loop %}true{% else %}false{% endif %},"dots":{% if section.settings.use_dots %}true{% else %}false{% endif %},"arrows":false,"slidesToShow":1,"slidesToScroll":1,"autoplay":{% if section.settings.use_autoplay %}true{% else %}false{% endif %},"speed":"1000","autoplaySpeed":3000,"centerMode":false,"variableWidth":false,"vertical":false,"nextArrow":"<button type=\"button\" style=\"font-size:24px;width:24px;height:24px;line-height:24px;\" class=\"slick-next default\"><svg><use xlink:href=\"#dlicon-arrow-right2\"><\/use><\/svg><\/button>","prevArrow":"<button type=\"button\" style=\"font-size:24px;width:24px;height:24px;line-height:24px;\" class=\"slick-prev default\"><svg><use xlink:href=\"#dlicon-arrow-left2\"><\/use><\/svg><\/button>","responsive":[{"breakpoint":1824,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":1200,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":992,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":768,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":480,"settings":{"slidesToShow":1,"slidesToScroll":1}}]}'>
      {% for block in section.blocks %}
      <div class="row">
        <div class="col-md-7 col-sm-7 col-xs-12">
          <div class="row-flex-center">
            <div class="image {% if block.settings.use_image_shadow %}image-shadow{% endif %}">
              {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: '745x545' }}" alt="{{ block.settings.image.alt }}" />
              {% else %}
              {{ 'image' | placeholder_svg_tag }}
              {% endif %}          
            </div>
            <div class="text">
              {% if block.settings.title != blank %}
              <h3><a href="{{ block.settings.link }}">{{ block.settings.title }}</a></h3>
              {% endif %}
              {% if block.settings.subtitle != blank %}
              <div class="subtitle">{{ block.settings.subtitle }}</div>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="col-md-5 col-sm-5 col-xs-12">
          <div class="row-flex-center">
            <div class="image {% if block.settings.use_image_shadow_2 %}image-shadow{% endif %}">
              {% if block.settings.image_2 != blank %}
              <img src="{{ block.settings.image_2 | img_url: '370x520' }}" alt="{{ block.settings.image_2.alt }}" />
              {% else %}
              {{ 'image' | placeholder_svg_tag }}
              {% endif %}          
            </div>
            <div class="text">
              {% if block.settings.title_2 != blank %}
              <h3><a href="{{ block.settings.link_2 }}">{{ block.settings.title_2 }}</a></h3>
              {% endif %}
              {% if block.settings.subtitle_2 != blank %}
              <div class="subtitle">{{ block.settings.subtitle_2 }}</div>
              {% endif %}
            </div> 
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    {% if section.settings.use_arrow %}
    <div class="g-slick-arrow-center">
      <div style="display: none;">{% include 'dlicon-arrow-left2' %}{% include 'dlicon-arrow-right2' %}</div>
      <button type="button" class="slick-prev-collection slick-prev default slick-arrow">{% include 'dlicon-arrow-left2' %}</button>
      <button type="button" class="slick-next-collection slick-next default slick-arrow">{% include 'dlicon-arrow-right2' %}</button>
    </div>
    {% endif %}
  </div>
</div>
