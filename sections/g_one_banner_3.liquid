{%- case section.settings.css_animations -%}
    {% when '1' %}
      	{%- assign css_animations_class = '' -%}
    {% when '2' %}
    	{%- assign css_animations_class = 'wow fadeIn' -%}
    {% when '3' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '4' %}
    	{%- assign css_animations_class = 'wow fadeInDownBig' -%}
    {% when '5' %}
    	{%- assign css_animations_class = 'wow fadeInLeft' -%}
    {% when '6' %}
    	{%- assign css_animations_class = 'wow fadeInLeftBig' -%}
    {% when '7' %}
    	{%- assign css_animations_class = 'wow fadeInRight' -%}
    {% when '8' %}
    	{%- assign css_animations_class = 'wow fadeInRightBig' -%}
    {% when '9' %}
    	{%- assign css_animations_class = 'wow fadeInUp' -%}
    {% when '10' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '11' %}
    	{%- assign css_animations_class = 'wow fadeInUpBig' -%}
{%- endcase -%}

{%- case section.settings.use_width -%}
    {% when '1' %}
      	{%- assign width_one_banner = 'g-fullwwidth' -%}
    {% when '2' %}
    	{%- assign width_one_banner = 'container-full' -%}
    {% when '3' %}
    	{%- assign width_one_banner = 'container' -%}
{%- endcase -%}

<div class="g-one-banner-3 {{ css_animations_class }}" {% if section.settings.margin != blank %}style="margin: {{ section.settings.margin }};"{% endif %}>
  <div class="{{ width_one_banner }}">
    <div class="g-banner cover-background lazy" {% if section.settings.image != blank %}data-src="{{ section.settings.image | img_url: '1920x', format: 'pjpg' | split:'?' | first }}"{% else %}style="background-color: #964f49;"{% endif %}>
      <div class="container text-center">
          {% if section.settings.show_video_popup %}
          <div class="link-video-banner">
            <a href="{{ section.settings.link_video_popup }}" class="video_popup"><div class="icon"><i class="fa fa-play"></i></div></a>
          </div>
          {% endif %}
          {% if section.settings.heading != blank %}
          <h2 {% if section.settings.heading_color != blank %}style="color: {{ section.settings.heading_color }};"{% endif %}>{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.title != blank %}
          <div class="title-block-bold" {% if section.settings.title_color != blank %}style="color: {{ section.settings.title_color }};"{% endif %}>{{ section.settings.title }}</div>
          {% endif %}   
          {% if section.settings.button_name != blank %}
          <a href="{{ section.settings.button_link }}" {% if section.settings.button_color != blank %}style="color: {{ section.settings.button_color }};"{% endif %}>{{ section.settings.button_name }}</a>  
          {% endif %}
      </div>
    </div>
  </div>
</div>
