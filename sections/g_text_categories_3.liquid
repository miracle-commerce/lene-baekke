{%- case section.settings.css_animations -%}
    {% when '1' %}
      	{%- assign css_animations_class = '' -%}
    {% when '2' %}
    	{%- assign css_animations_class = 'wow fadeIn' -%}
    {% when '3' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '4' %}
    	{%- assign css_animations_class = 'wow fadeInDownBig' -%}
    {% when '5' %}
    	{%- assign css_animations_class = 'wow fadeInLeft' -%}
    {% when '6' %}
    	{%- assign css_animations_class = 'wow fadeInLeftBig' -%}
    {% when '7' %}
    	{%- assign css_animations_class = 'wow fadeInRight' -%}
    {% when '8' %}
    	{%- assign css_animations_class = 'wow fadeInRightBig' -%}
    {% when '9' %}
    	{%- assign css_animations_class = 'wow fadeInUp' -%}
    {% when '10' %}
    	{%- assign css_animations_class = 'wow fadeInUpBig' -%}
{%- endcase -%}
<div class="g-text-categories-3 wow fadeIn" style="{% if section.settings.bg_color != blank %}background-color: {{ section.settings.bg_color }};{% endif %}{% if section.settings.content_color != blank %}color: {{ section.settings.content_color }};{% endif %}{% if section.settings.margin != blank %}margin: {{ section.settings.margin }};{% endif %}{% if section.settings.padding != blank %}padding: {{ section.settings.padding }};{% endif %}">
  <div class="{% if section.settings.use_container %}container{% else %}container-full{% endif %}">
    <div class="row">
      <div class="col-sm-7 col-xs-12">
        {% if section.settings.title != blank %}
        <h5 {% if section.settings.content_color != blank %}style="color: {{ section.settings.content_color }};"{% endif %}>{{ section.settings.title }}</h5>
        {% endif %}
        {% if section.settings.heading != blank %}
        <h2 {% if section.settings.content_color != blank %}style="color: {{ section.settings.content_color }};"{% endif %}>{{ section.settings.heading }}</h2>
        {% endif %}
      </div>
      <div class="col-sm-5 col-xs-12">
        {% if section.settings.text != blank %}
        <p>{{ section.settings.text }}</p>
      	{% endif %}
      </div>
    </div>
    <div class="row">
      {% for block in section.blocks %}
      <div class="col-sm-3 col-xs-12 {{ css_animations_class }}">
        {% if block.settings.title != blank %}
        <h4 style="{% if block.settings.title_font_size != blank %}font-size: {{ block.settings.title_font_size }}px;{% endif %} {% if section.settings.content_color != blank %}color: {{ section.settings.content_color }};{% endif %}">
          {% if block.settings.link != blank %}<a href="{{ block.settings.link }}" {% if section.settings.content_color != blank %}style="color: {{ section.settings.content_color }};"{% endif %}>{% endif %}
            {{ block.settings.title }}
          {% if block.settings.link != blank %}</a>{% endif %}
        </h4>
        {% endif %}
        {% if block.settings.subtitle != blank %}
        <div class="subtitle" {% if section.settings.content_color != blank %}style="color: {{ section.settings.content_color }};"{% endif %}>{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
</div>
<div class="clearfix"></div>
