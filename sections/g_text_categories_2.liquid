{%- case section.settings.css_animations -%}
    {% when '1' %}
      	{%- assign css_animations_class = '' -%}
    {% when '2' %}
    	{%- assign css_animations_class = 'wow fadeIn' -%}
    {% when '3' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '4' %}
    	{%- assign css_animations_class = 'wow fadeInDownBig' -%}
    {% when '5' %}
    	{%- assign css_animations_class = 'wow fadeInLeft' -%}
    {% when '6' %}
    	{%- assign css_animations_class = 'wow fadeInLeftBig' -%}
    {% when '7' %}
    	{%- assign css_animations_class = 'wow fadeInRight' -%}
    {% when '8' %}
    	{%- assign css_animations_class = 'wow fadeInRightBig' -%}
    {% when '9' %}
    	{%- assign css_animations_class = 'wow fadeInUp' -%}
    {% when '10' %}
    	{%- assign css_animations_class = 'wow fadeInUpBig' -%}
{%- endcase -%}
<div class="g-text-categories-2 {{ css_animations_class }}" {% if section.settings.margin != blank %}style="margin: {{ section.settings.margin }};"{% endif %}>
  <div class="{% if section.settings.use_container %}container{% else %}container-full{% endif %}">
    <div class="row">
      <div class="col-md-6 col-sm-12 col-xs-12">
        {% if section.settings.text != blank %}
        <div class="text-testimonials-support">{{ section.settings.text }}</div>
        {% endif %}
        {% if section.settings.name != blank %}
      	<div class="name-black">{{ section.settings.name }}</div>
        {% endif %}
      </div>
      <div class="col-md-6 col-sm-12 col-xs-12">
        <div class="row">
          {% for block in section.blocks %}
          <div class="col-sm-6 col-xs-12 margin-bottom-30">
            <div class="box-text-categories">
              <div class="box-image--categories cover-background lazy" {% if block.settings.image != blank %}data-src="{{ block.settings.image | img_url: '270x90' | split:'?' | first }}"{% endif %}> </div>
              {% if block.settings.title != blank %}
              <h4>{{ block.settings.title }}</h4>
              {% endif %}
              {% if block.settings.subtitle != blank %}
              <div class="subtitle">{{ block.settings.subtitle }}</div>
              {% endif %}
              {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="overflow-link"></a>
              {% endif %}
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="clearfix"></div>
