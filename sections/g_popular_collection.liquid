                  </filter>
                </defs>
                <circle data-name="Ellipse bg" class="cls-1" cx="25" cy="25" r="25" style="fill: {{ block.settings.button_1_bg }};" />
                <path class="cls-2" d="M24,15h1V35H24V15ZM15,26V25H35v1H15Z" style="fill: {{ block.settings.button_1_color }};" />
              </svg>
            </a>
            {% endif %}
          </div>
          <div class="popular-collection-item">
            <div class="image">
              {% if block.settings.image_2 != blank %}
