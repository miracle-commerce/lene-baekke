                <path class="cls-2" d="M24,15h1V35H24V15ZM15,26V25H35v1H15Z" style="fill: {{ block.settings.button_2_color }};" />
              </svg>
            </a>
            {% endif %}
          </div>
        </div>        
        {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
