{%- case section.settings.css_animations -%}
    {% when '1' %}
      	{%- assign css_animations_class = '' -%}
    {% when '2' %}
    	{%- assign css_animations_class = 'wow fadeIn' -%}
    {% when '3' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '4' %}
    	{%- assign css_animations_class = 'wow fadeInDownBig' -%}
    {% when '5' %}
    	{%- assign css_animations_class = 'wow fadeInLeft' -%}
    {% when '6' %}
    	{%- assign css_animations_class = 'wow fadeInLeftBig' -%}
    {% when '7' %}
    	{%- assign css_animations_class = 'wow fadeInRight' -%}
    {% when '8' %}
    	{%- assign css_animations_class = 'wow fadeInRightBig' -%}
    {% when '9' %}
    	{%- assign css_animations_class = 'wow fadeInUp' -%}
    {% when '10' %}
    	{%- assign css_animations_class = 'wow fadeInUpBig' -%}
{%- endcase -%}

{%- case section.settings.use_width -%}
    {% when '1' %}
      	{%- assign content_width = 'g-fullwwidth' -%}
    {% when '2' %}
    	{%- assign content_width = 'container-full' -%}
    {% when '3' %}
    	{%- assign content_width = 'container' -%}
{%- endcase -%}
<div class="g-popular-collection {{ css_animations_class }}" {% if section.settings.margin != blank %}style="margin: {{ section.settings.margin }};"{% endif %}>
  <div class="{{ content_width }}">
    <div class="g-relative">
      {% if section.settings.title != blank %}
      <h2 {% if section.settings.title_position_top != blank %}style="top: {{ section.settings.title_position_top }};"{% endif %}>{{ section.settings.title }}</h2>
      {% endif %}
      <div class="list-popular-collections">
        {% for block in section.blocks %}
        {%- case block.settings.width -%}
        {% when '1' %}
        {% assign featured_banner_width = 'col-sm-3 col-xs-12' %}
        {% when '2' %}
        {% assign featured_banner_width = 'col-sm-4 col-xs-12' %}
        {% when '3' %}
        {% assign featured_banner_width = 'col-sm-6 col-xs-12' %}
        {% when '4' %}
        {% assign featured_banner_width = 'col-sm-8 col-xs-12' %}
        {% when '5' %}
        {% assign featured_banner_width = 'col-sm-12 col-xs-12' %}
        {%- endcase -%}
        {% case block.type %}
        {% when 'block_collection_1' %}
		<div class="{{ featured_banner_width }}" style="padding: 0; {% if block.settings.margin != blank %}margin: {{ block.settings.margin }};{% endif %}">
          <div class="popular-collection-item-center">
            <div class="image">
              {% if block.settings.image != blank %}
              <img class="lazy" data-src="{{ block.settings.image | img_url: '860x860', format: 'pjpg' | split:'?' | first }}" alt="{{ block.settings.image.alt }}" />
              {% else %}
              {% capture current %}{% cycle 1, 2, 3, 4 %}{% endcapture %}
              {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg svg-height-1000' }}
              {% endif %}
            </div>
            <div class="info">
              {% if block.settings.title != blank %}
              <h3 {% if block.settings.title_color != blank %}style="color: {{ block.settings.title_color }};"{% endif %}>{{ block.settings.title }}</h3>
              {% endif %}
            </div>
            {% if block.settings.use_button_link %}
            <a href="{{ block.settings.link }}">
              <svg data-name="button view" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="50" height="50" viewBox="0 0 50 50">
                <metadata><?xpacket begin="﻿" ?>
                  <x:xmpmeta xmlns:x="adobe:ns:meta/" x:xmptk="Adobe XMP Core 5.6-c138 79.159824, 2016/09/14-01:09:01">
                    <rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#">
                      <rdf:Description rdf:about=""/>
                    </rdf:RDF>
                  </x:xmpmeta>
                  <?xpacket end="w"?></metadata>
                <defs>
                  <filter x="-39" y="-39" width="129" height="129" filterUnits="userSpaceOnUse">
                    <feOffset result="offset" in="SourceAlpha"/>
                    <feGaussianBlur result="blur" stdDeviation="6.164"/>
                    <feFlood result="flood" flood-color="#96b0cb" flood-opacity="0.31"/>
                    <feComposite result="composite" operator="in" in2="blur"/>
                    <feBlend result="blend" in="SourceGraphic"/>
                  </filter>
                </defs>
                <circle data-name="Ellipse bg" class="cls-1" cx="25" cy="25" r="25" style="fill: {{ block.settings.button_bg }};" />
                <path class="cls-2" d="M24,15h1V35H24V15ZM15,26V25H35v1H15Z" style="fill: {{ block.settings.button_color }};" />
              </svg>
            </a>
            {% endif %}
          </div>          
        </div>
        {% when 'block_collection_2' %}
        <div class="{{ featured_banner_width }}" style="padding: 0; {% if block.settings.margin != blank %}margin: {{ block.settings.margin }};{% endif %}">
          <div class="popular-collection-item">
            <div class="image">
              {% if block.settings.image_1 != blank %}
