              <div class="subtitle" {% if block.settings.subtitle_1_color != blank %}style="color: {{ block.settings.subtitle_1_color }};"{% endif %}>{{ block.settings.subtitle_1 }}</div>
              {% endif %}
            </div>
            {% if block.settings.use_button_link_1 %}
            <a href="{{ block.settings.link_1 }}">
              <svg data-name="button view" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="50" height="50" viewBox="0 0 50 50">
                <metadata><?xpacket begin="﻿" ?>
