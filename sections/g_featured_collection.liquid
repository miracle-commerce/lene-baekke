{%- case section.settings.css_animations -%}
    {% when '1' %}
      	{%- assign css_animations_class = '' -%}
    {% when '2' %}
    	{%- assign css_animations_class = 'wow fadeIn' -%}
    {% when '3' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '4' %}
    	{%- assign css_animations_class = 'wow fadeInDownBig' -%}
    {% when '5' %}
    	{%- assign css_animations_class = 'wow fadeInLeft' -%}
    {% when '6' %}
    	{%- assign css_animations_class = 'wow fadeInLeftBig' -%}
    {% when '7' %}
    	{%- assign css_animations_class = 'wow fadeInRight' -%}
    {% when '8' %}
    	{%- assign css_animations_class = 'wow fadeInRightBig' -%}
    {% when '9' %}
    	{%- assign css_animations_class = 'wow fadeInUp' -%}
    {% when '10' %}
    	{%- assign css_animations_class = 'wow fadeInUpBig' -%}
{%- endcase -%}
<div class="g-featured-collection cover-background lazy {{ css_animations_class }}" {% if section.settings.image != blank %}data-src="{{ section.settings.image | img_url: '1920x', format: 'pjpg' | split:'?' | first }}"{% endif %} style="{% if section.settings.bg_color != blank %}background-color: {{ section.settings.bg_color }};{% endif %}{% if section.settings.margin != blank %}margin: {{ section.settings.margin }};{% endif %}{% if section.settings.padding != blank %}padding: {{ section.settings.padding }};{% endif %}">
  <div class="container">
    {% if section.settings.title != blank %}
    	<h3 class="text-center">{{ section.settings.title }}</h3>
    {% endif %}
     <div style="display: none;">{% include 'dlicon-arrow-left2' %}{% include 'dlicon-arrow-right2' %}</div>
    <div class="g-stick-featured-collection g-slick-slider" data-slick='{"infinite":{% if section.settings.use_loop %}true{% else %}false{% endif %},"dots":{% if section.settings.use_dots %}true{% else %}false{% endif %},"slidesToShow":1,"slidesToScroll":1,"autoplay":{% if section.settings.use_autoplay %}true{% else %}false{% endif %},"arrows":{% if section.settings.use_arrows %}true{% else %}false{% endif %},"speed":"1000","autoplaySpeed":3000,"centerMode":false,"variableWidth":false,"vertical":false,"nextArrow":"<button type=\"button\" style=\"font-size:24px;width:24px;height:24px;line-height:24px;\" class=\"slick-next default\"><svg><use xlink:href=\"#dlicon-arrow-right2\"><\/use><\/svg><\/button>","prevArrow":"<button type=\"button\" style=\"font-size:24px;width:24px;height:24px;line-height:24px;\" class=\"slick-prev default\"><svg><use xlink:href=\"#dlicon-arrow-left2\"><\/use><\/svg><\/button>","responsive":[{"breakpoint":1824,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":1200,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":992,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":768,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":480,"settings":{"slidesToShow":1,"slidesToScroll":1}}]}'>
      {% for block in section.blocks %}
      <div class="row row-flex-center">
        <div class="col-md-8 col-sm-8 col-xs-12">
          <div class="image-dots">
            {% if block.settings.image_dots != blank %}
            <img src="{{ block.settings.image_dots | img_url: '229x229' }}" alt="{{ block.settings.image_dots.alt }}" />
            {% endif %}
          </div>
          <div class="image {% if block.settings.use_image_shadow %}image-shadow{% endif %}">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: '370x520' }}" alt="{{ block.settings.image.alt }}" />
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}          
          </div>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-12">
          {% if block.settings.title != blank %}
          	<h5>{{ block.settings.title }}</h5>
          {% endif %}
          {% if block.settings.button_name != blank %}
          	<a href="{{ block.settings.button_link }}">{{ block.settings.button_name }}</a>
          {% endif %}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>    
</div>
