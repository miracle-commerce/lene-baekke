{%- case section.settings.css_animations -%}
    {% when '1' %}
      	{%- assign css_animations_class = '' -%}
    {% when '2' %}
    	{%- assign css_animations_class = 'wow fadeIn' -%}
    {% when '3' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '4' %}
    	{%- assign css_animations_class = 'wow fadeInDownBig' -%}
    {% when '5' %}
    	{%- assign css_animations_class = 'wow fadeInLeft' -%}
    {% when '6' %}
    	{%- assign css_animations_class = 'wow fadeInLeftBig' -%}
    {% when '7' %}
    	{%- assign css_animations_class = 'wow fadeInRight' -%}
    {% when '8' %}
    	{%- assign css_animations_class = 'wow fadeInRightBig' -%}
    {% when '9' %}
    	{%- assign css_animations_class = 'wow fadeInUp' -%}
    {% when '10' %}
    	{%- assign css_animations_class = 'wow fadeInUpBig' -%}
{%- endcase -%}

<div class="g-list-categories wow fadeIn" {% if section.settings.margin != blank %}style="margin: {{ section.settings.margin }};"{% endif %}>
  <div class="container">
    <div class="section-title text-right">
      {% if section.settings.title != blank %}
      <div class="title">{{ section.settings.title }}</div>
      {% endif %}
      {% if section.settings.heading != blank %}
      <h2 class="heading">{{ section.settings.heading }}</h2>
      {% endif %}
    </div>
    <div class="row">
      <div class="col-md-3 col-sm-3 col-xs-12">
        {% if section.settings.text != blank %}
        <p>{{ section.settings.text }}</p>
        {% endif %}
      </div>
      <div class="col-md-9 col-sm-9 col-xs-12">
        <div class="row row-list-categories">
        	{% for block in section.blocks %}
          		<div class="col-md-4 col-sm-4 col-xs-12 {{ css_animations_class }}" {% if forloop.index == 2 %}data-wow-delay="0.2s"{% elsif forloop.index == 3  %}data-wow-delay="0.4s"{% endif %}>	
                  <div class="image">
                    <a href="{{ block.settings.link }}">
                      {% if block.settings.image != blank %}
                      <img data-src="{{ block.settings.image | img_url: '270x370' }}" alt="{{ block.settings.image.alt }}" class="lazy" />
                      {% else %}
                      {{ 'image' | placeholder_svg_tag }}
                      {% endif %}  
                    </a>
                  </div>
                  {% if block.settings.title != blank %}
               		<h3 class="name-catefories"><a href="{{ block.settings.link }}">{{ block.settings.title }}</a></h3>
                  {% endif %}
          		</div>
            {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Block list categories",
    "class": "globo_list_categories",
	"max_blocks": 3,
  	"presets": [
      {
        "name": "Block list categories",
        "category": "Categories & Banner",
        "blocks": [
          {
            "type": "block_list_categories"
          },
          {
            "type": "block_list_categories"
          },
          {
            "type": "block_list_categories"
          }
        ]
      }
    ],
    "settings": [
      {
        "type": "select",
        "id": "css_animations",
        "label": "CSS Animation",
        "options": [
          { "value": "1", "label": "None" },
          { "value": "2", "label": "fadeIn" },
          { "value": "3", "label": "fadeInDown" },
          { "value": "4", "label": "fadeInDownBig" },
          { "value": "5", "label": "fadeInLeft" },
          { "value": "6", "label": "fadeInLeftBig" },
          { "value": "7", "label": "fadeInRight" },
          { "value": "8", "label": "fadeInRightBig" },
          { "value": "9", "label": "fadeInUp" },
          { "value": "10", "label": "fadeInUpBig" }
        ],
        "default": "9"
      },
      {
        "type": "text",
        "id": "margin",
        "label": "Margin: (top-right-bottom-left)",
        "info": "Ex: 10px 0 30px 0"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "HEBES FURNITURE STORE"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Categories"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "default": "Class aptent taciti sociosqu ad litora torquent per conubia nostra, Sed id interdum urna. Nam ac elit a ante commodo tristique. Duis lacus urna, condimentum a vehicula a hendrerit ac nisi. hendrerit ac nisi Lorem ipsum dolor sit amet, consectetur adipiscing elit."
      }
    ],
  	"blocks": [
      {
        "type": "block_list_categories",
        "name": "Block list categories",
        "settings": [
         {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
         },
         {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "# Furniture"
         },
         {
            "type": "url",
            "id": "link",
            "label": "Link"
         }
        ]
      }
    ]
  }
{% endschema %}