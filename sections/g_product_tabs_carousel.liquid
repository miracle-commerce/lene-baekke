{%- case section.settings.css_animations -%}
    {% when '1' %}
      	{%- assign css_animations_class = '' -%}
    {% when '2' %}
    	{%- assign css_animations_class = 'wow fadeIn' -%}
    {% when '3' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '4' %}
    	{%- assign css_animations_class = 'wow fadeInDownBig' -%}
    {% when '5' %}
    	{%- assign css_animations_class = 'wow fadeInLeft' -%}
    {% when '6' %}
    	{%- assign css_animations_class = 'wow fadeInLeftBig' -%}
    {% when '7' %}
    	{%- assign css_animations_class = 'wow fadeInRight' -%}
    {% when '8' %}
    	{%- assign css_animations_class = 'wow fadeInRightBig' -%}
    {% when '9' %}
    	{%- assign css_animations_class = 'wow fadeInUp' -%}
    {% when '10' %}
    	{%- assign css_animations_class = 'wow fadeInUpBig' -%}
{%- endcase -%}

{%- case section.settings.sidetoshow -%}
    {% when '3' %}
      	{%- assign slider_class_width = 'xlg-grid-3-items lg-grid-3-items md-grid-3-items' -%}
    {% when '4' %}
    	{%- assign slider_class_width = 'xlg-grid-4-items lg-grid-4-items md-grid-4-items' -%}
    {% when '5' %}
    	{%- assign slider_class_width = 'xlg-grid-5-items lg-grid-5-items md-grid-4-items' -%}
{%- endcase -%}

{%- case section.settings.width -%}
    {% when '1' %}
      	{%- assign width_class = 'container-full' -%}
    {% when '2' %}
    	{%- assign width_class = 'container-full-no-padding' -%}
    {% when '3' %}
    	{%- assign width_class = 'container' -%}
{%- endcase -%}

<div class="globo-product-tabs-slider {{ css_animations_class }}" {% if section.settings.margin != blank %}style="margin: {{ section.settings.margin }};"{% endif %}>
  <div class="{{ width_class }}">
    <div class="header-product-tabs">
      <div class="container">
        <div class="row">
          {%- case section.settings.style -%}
          {% when '1' %}
          <div class="col-md-3 col-sm-3 col-xs-12">
            {% if section.settings.title != blank %}
            <h2 class="title-border-top-small" style="{% if section.settings.title_font_weight != blank %}font-weight: {{ section.settings.title_font_weight }};{% endif %} {% if section.settings.title_font_size != blank %}font-size: {{ section.settings.title_font_size }}px;{% endif %}{% if section.settings.title_letter_spacing != blank %}letter-spacing: {{ section.settings.title_letter_spacing }};{% endif %}">{{ section.settings.title }}</h2>
            {% endif %}
            {% if section.settings.subtitle != blank %}
            <p>{{ section.settings.subtitle }}</p>
            {% endif %}        	
          </div>
          <div class="col-md-7 col-sm-5 col-xs-12">
            <ul class="nav nav-tabs-products" {% if section.settings.use_hide_tabs %}style="display: none;"{% endif %}>
              {%- for block in section.blocks -%}
              {% assign collection = collections[block.settings.id_collection] %}
              <li class="{% if forloop.first%}active{% endif %}">
                <a href="#vc_tab_{{ block.id }}" data-toggle="tab" aria-expanded="false">
                  <span>{% if block.settings.title != blank %}{{ block.settings.title }}{% endif %}</span>
                </a>
              </li>
              {%- endfor -%}
            </ul>
          </div>
          {% if section.settings.use_arrow %}
          <div class="col-md-2 col-sm-4 col-xs-12 col-padding-top-16">
            <div style="display: none;">{% include 'dlicon-arrow-left2' %}{% include 'dlicon-arrow-right2' %}</div>
            <button type="button" class="slick-prev-custom slick-prev default slick-arrow">{% include 'dlicon-arrow-left2' %}</button>
            <button type="button" class="slick-next-custom slick-next default slick-arrow">{% include 'dlicon-arrow-right2' %}</button>
          </div>
          {% endif %}
          {% when '2' %}
          <div class="col-md-10 col-sm-9 col-xs-12">
            {% if section.settings.title != blank %}
            <h2 class="margin-0" style="{% if section.settings.title_font_weight != blank %}font-weight: {{ section.settings.title_font_weight }};{% endif %} {% if section.settings.title_font_size != blank %}font-size: {{ section.settings.title_font_size }}px;{% endif %}{% if section.settings.title_letter_spacing != blank %}letter-spacing: {{ section.settings.title_letter_spacing }};{% endif %}">{{ section.settings.title }}</h2>
            {% endif %}
            {% if section.settings.subtitle != blank %}
            <p>{{ section.settings.subtitle }}</p>
            {% endif %} 
            <ul class="nav nav-tabs-products nav-tabs-products-2" {% if section.settings.use_hide_tabs %}style="display: none;"{% endif %}>
              {%- for block in section.blocks -%}
              {% assign collection = collections[block.settings.id_collection] %}
              <li class="{% if forloop.first%}active{% endif %}">
                <a href="#vc_tab_{{ block.id }}" data-toggle="tab" aria-expanded="false">
                  <span>{% if block.settings.title != blank %}{{ block.settings.title }}{% endif %}</span>
                </a>
              </li>
              {%- endfor -%}
            </ul>
          </div>
          {% if section.settings.use_arrow %}
          <div class="col-md-2 col-sm-3 col-xs-12 col-padding-top-16">
            <div style="display: none;">{% include 'dlicon-arrow-left2' %}{% include 'dlicon-arrow-right2' %}</div>
            <button type="button" class="slick-prev-custom slick-prev default slick-arrow">{% include 'dlicon-arrow-left2' %}</button>
            <button type="button" class="slick-next-custom slick-next default slick-arrow">{% include 'dlicon-arrow-right2' %}</button>
          </div>
          {% endif %}
          {% when '3' %}
          <div class="col-md-12 col-sm-12 col-xs-12 text-center">
            {% if section.settings.title != blank %}
            <h2 style="{% if section.settings.title_font_weight != blank %}font-weight: {{ section.settings.title_font_weight }};{% endif %} {% if section.settings.title_font_size != blank %}font-size: {{ section.settings.title_font_size }}px;{% endif %}{% if section.settings.title_letter_spacing != blank %}letter-spacing: {{ section.settings.title_letter_spacing }};{% endif %}">{{ section.settings.title }}</h2>
            {% endif %}
            {% if section.settings.subtitle != blank %}
            <p>{{ section.settings.subtitle }}</p>
            {% endif %}  
            <ul class="nav nav-tabs-products nav-tabs-products-3" {% if section.settings.use_hide_tabs %}style="display: none;"{% endif %}>
              {%- for block in section.blocks -%}
              {% assign collection = collections[block.settings.id_collection] %}
              <li class="{% if forloop.first%}active{% endif %}">
                <a href="#vc_tab_{{ block.id }}" data-toggle="tab" aria-expanded="false">
                  <span>{% if block.settings.title != blank %}{{ block.settings.title }}{% endif %}</span>
                </a>
              </li>
              {%- endfor -%}
            </ul>
          </div>
          {% when '4' %}
          <div class="col-md-12 col-sm-12 col-xs-12 text-center">
            {% if section.settings.title != blank %}
            <h2 style="{% if section.settings.title_font_weight != blank %}font-weight: {{ section.settings.title_font_weight }};{% endif %} {% if section.settings.title_font_size != blank %}font-size: {{ section.settings.title_font_size }}px;{% endif %}{% if section.settings.title_letter_spacing != blank %}letter-spacing: {{ section.settings.title_letter_spacing }};{% endif %}">{{ section.settings.title }}</h2>
            {% endif %}
            {% if section.settings.subtitle != blank %}
            <p>{{ section.settings.subtitle }}</p>
            {% endif %}  
            <ul class="nav nav-tabs-products nav-tabs-products-4" {% if section.settings.use_hide_tabs %}style="display: none;"{% endif %}>
              {%- for block in section.blocks -%}
              {% assign collection = collections[block.settings.id_collection] %}
              <li class="{% if forloop.first%}active{% endif %}">
                <a href="#vc_tab_{{ block.id }}" data-toggle="tab" aria-expanded="false">
                  <span>{% if block.settings.title != blank %}{{ block.settings.title }}{% endif %}</span>
                </a>
              </li>
              {%- endfor -%}
            </ul>
          </div>
          {%- endcase -%}
        </div>
      </div>
    </div>
    <div class="tab-content">
      {%- for block in section.blocks -%}
      {% assign collection = collections[block.settings.id_collection] %}
      <div class="tab-pane{% if forloop.first%} active{% endif %}" id="vc_tab_{{ block.id }}">
        <div class="g-slick-products grid-items {{ slider_class_width }} sm-grid-3-items xs-grid-2-items mb-grid-1-items" data-slick='{"infinite":{% if section.settings.use_loop %}true{% else %}false{% endif %},"dots":{% if section.settings.use_dots %}true{% else %}false{% endif %},"slidesToShow":{{ section.settings.sidetoshow }},"slidesToScroll":{{ section.settings.sidetoshow }},"autoplay":{% if section.settings.use_autoplay %}true{% else %}false{% endif %},"arrows": false,"speed":"1000","autoplaySpeed":3000,"centerMode":false,"variableWidth":false,"nextArrow":"<button type=\"button\" style=\"font-size:24px;width:24px;height:24px;line-height:24px;\" class=\"slick-next default\"><svg><use xlink:href=\"#dlicon-arrow-right2\"><\/use><\/svg><\/button>","prevArrow":"<button type=\"button\" style=\"font-size:24px;width:24px;height:24px;line-height:24px;\" class=\"slick-prev default\"><svg><use xlink:href=\"#dlicon-arrow-left2\"><\/use><\/svg><\/button>","responsive":[{"breakpoint":1200,"settings":{"slidesToShow":4,"slidesToScroll":4}},{"breakpoint":992,"settings":{"slidesToShow":3,"slidesToScroll":3}},{"breakpoint":768,"settings":{"slidesToShow":2,"slidesToScroll":2}},{"breakpoint":480,"settings":{"slidesToShow":1,"slidesToScroll":1}}]}'>
          {% if collection.empty? %}
          {% for i in (1..20) limit:block.settings.items_show %}
          {% include 'no-products' %}
          {% endfor %}
          {% else %}
          {% for product in collection.products limit:block.settings.items_show %}
          {% include 'g_product_carousel' %} 
          {% endfor %}
          {% endif %}
        </div>
      </div>
      {%- endfor -%}
    </div>
    {% if section.settings.style == '3' or section.settings.style == '4' %}
    {% if section.settings.use_arrow %}
    <div class="g-slick-arrow-center">
      <div style="display: none;">{% include 'dlicon-arrow-left2' %}{% include 'dlicon-arrow-right2' %}</div>
      <button type="button" class="slick-prev-custom slick-prev default slick-arrow">{% include 'dlicon-arrow-left2' %}</button>
      <button type="button" class="slick-next-custom slick-next default slick-arrow">{% include 'dlicon-arrow-right2' %}</button>
    </div>
    {% endif %}
    {% endif %}
    {% if section.settings.view_all_products != blank %}
    <div class="button-view-all-products text-center"><a href="{{ section.settings.link_view_all_products }}">{{ section.settings.view_all_products }}</a></div>
    {% endif %}
  </div>
</div>
