<div class="g-text-support g-about-text-support wow fadeIn animated">
  <div class="container">
    <div class="row">
      {% for block in section.blocks %}
      <div class="col-md-4 col-sm-6 col-xs-12 wow fadeInUp" {% if forloop.index == 2 %}data-wow-delay="0.2s"{% endif %} {% if forloop.index == 3 %}data-wow-delay="0.6s"{% endif %}>
        {% if block.settings.heading != blank %}
        	<h2>{{ block.settings.heading }}</h2>
        {% endif %}
        <div class="text">
          {% if block.settings.title != blank %}
          	<h5>{{ block.settings.title }}</h5>
          {% endif %}
          {% if block.settings.subtitle != blank %}
          	<div class="subtitle">{{ block.settings.subtitle }}</div>
          {% endif %}
          {% if block.settings.text != blank %}
          	<p>{{ block.settings.text }}</p>
          {% endif %}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
<style>
  {% if section.settings.heading_color != blank %}
  .g-text-support h2 {
    color: {{ section.settings.heading_color }};
  }
  {% endif %}
  {% if section.settings.title_color != blank %}
  .g-text-support .text h5 {
    color: {{ section.settings.title_color }};
  }
  {% endif %}
  {% if section.settings.subtitle_color != blank %}
  .g-text-support .subtitle {
  	color: {{ section.settings.subtitle_color }};
  }
  {% endif %}
  {% if section.settings.bg_border_color != blank %}
  .g-text-support .text h5:before {
    background: {{ section.settings.bg_border_color }};
  }
  {% endif %}
</style>
<div class="clearfix"></div>
{% schema %}
  {
    "name": "Block text support",
    "class": "globo_text_support",
	"max_blocks": 3,
    "settings": [
      {
        "type": "header",
        "content": "Settings block color"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading color"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title color"
      },
      {
        "type": "color",
        "id": "subtitle_color",
        "label": "Subtitle color"
      },
      {
        "type": "color",
        "id": "bg_border_color",
        "label": "Background border color"
      }
    ],
  	"blocks": [
      {
        "type": "block_text_support",
        "name": "Block text support",
        "settings": [
         {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "F"
         },
         {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Free Shipping"
         },
         {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle",
            "default": "ALL ORDER OVER $30"
         },
         {
            "type": "textarea",
            "id": "text",
            "label": "Text",
            "default": "Nam ac elit a ante commodo tristique. Duis lacus urna hicula a ac nisi Lorem ipsum."
         }
        ]
      }
    ]
  }
{% endschema %}